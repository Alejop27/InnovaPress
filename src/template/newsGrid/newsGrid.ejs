<section class="news-grid">
    <div class="news-grid__container">
        <h2 style="text-align: center; margin-bottom: 2rem;">Últimas Noticias</h2>
        <div class="news-grid__items">
            <% if (news && news.length> 0) { %>
                <% news.forEach(item=> { %>
                    <article class="news-card">
                        <div class="news-card__image-wrapper">
                            <img src="<%= item.image %>" alt="<%= item.title %>" class="news-card__image">
                        </div>
                        <div class="news-card__content">
                            <span class="news-card__category">
                                <%= item.category %>
                            </span>
                            <h3 class="news-card__title">
                                <%= item.title %>
                            </h3>
                            <p class="news-card__summary">
                                <%= item.summary %>
                            </p>
                            <p class="news-card__date">
                                <%= item.date %>
                            </p>
                            <div class="news-card__footer">
                                <span class="news-card__likes">❤️ <%= item.likes %></span>
                                <a href="/noticia/<%= item.id %>" class="news-card__link">Leer más →</a>
                            </div>
                        </div>
                    </article>
                    <% }) %>
                        <% } else { %>
                            <p style="text-align: center; grid-column: 1/-1;">No hay noticias disponibles</p>
                            <% } %>
        </div>
    </div>
</section>